DROP USER IF EXISTS 'MYSQL_USER';
FLUSH PRIVILEGES;

UPDATE mysql.user SET authentication_string=PASSWORD('root') WHERE user='root';
GRANT ALL ON *.* TO 'root'@'localhost';
GRANT ALL ON *.* TO 'root'@'%';
ALTER USER 'root'@'localhost' IDENTIFIED BY 'root';
FLUSH PRIVILEGES;

CREATE USER 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD';
UPDATE mysql.user SET authentication_string=PASSWORD('MYSQL_PASSWORD') WHERE user='MYSQL_USER';
FLUSH PRIVILEGES;

CREATE DATABASE IF NOT EXISTS `MYSQL_DATABASE`;

GRANT ALL PRIVILEGES ON `MYSQL_DATABASE`.* TO 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD';

CREATE DATABASE IF NOT EXISTS playster_content;
CREATE DATABASE IF NOT EXISTS playster_ingestion; 
CREATE DATABASE IF NOT EXISTS playster_reporting;

